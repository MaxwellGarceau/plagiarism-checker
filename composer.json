{
    "name": "maxgarceau/plagiarism-checker",
    "description": "Check for plagiarism via a 3rd party API",
    "authors": [
        {
            "name": "Max Garceau",
            "email": "maxwellgarceau@gmail.com"
        }
    ],
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.1",
        "aaemnnosttv/wp-sqlite-db": "^1.2",
        "brain/monkey": "^2.6",
        "koodimonni/composer-dropin-installer": "^1.4",
        "mnsami/composer-custom-directory-installer": "^2.0",
        "pestphp/pest": "^1.2",
        "php-stubs/wordpress-stubs": "^5.9",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-master",
        "wordpress/wordpress": "^6.6",
        "yoast/phpunit-polyfills": "^1.0",
        "yoast/wp-test-utils": "^1.0",
        "mockery/mockery": "^1.6"
    },
    "scripts": {
        "sniff": "phpcs --standard=WordPress --extensions=php",
        "lint": "phpcbf --standard=WordPress --extensions=php"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "pestphp/pest-plugin": true,
            "mnsami/composer-custom-directory-installer": true,
            "composer/installers": true,
            "koodimonni/composer-dropin-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "Max_Garceau\\Plagiarism_Checker\\": "src/"
        }
    },
    "require": {
        "kucrut/vite-for-wp": "^0.9.3",
        "php-di/php-di": "^6.4",
        "monolog/monolog": "^3.7",
        "vlucas/phpdotenv": "^5.6"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/WordPress/wordpress-develop/"
        }
    ],
    "extra": {
        "installer-paths": {
            "./wp/": ["wordpress/wordpress", "aaemnnosttv/wp-sqlite-db"]
        },
        "dropin-paths": {
            "wp/src/wp-content/": ["package:aaemnnosttv/wp-sqlite-db:src/db.php"]
        }
    }
}
