{
    "name": "maxgarceau/wp-admin-codex",
    "description": "Access the WP documention when you need it from the WP Admin",
    "authors": [
        {
            "name": "Max Garceau",
            "email": "maxwellgarceau@gmail.com"
        }
    ],
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.1",
        "phpunit/phpunit": "^11.4",
        "yoast/phpunit-polyfills": "^3.0",
        "composer/installers": "^2.3",
        "wordpress/wordpress": "dev-master"
    },
    "scripts": {
        "sniff": "phpcs --standard=WordPress --extensions=php",
        "lint": "phpcbf --standard=WordPress --extensions=php"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "composer/installers": true,
            "johnpbloch/wordpress-core-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "Max_Garceau\\Plagiarism_Checker\\": "src/"
        }
    },
    "require": {
        "kucrut/vite-for-wp": "^0.9.3",
        "php-di/php-di": "^6.4",
        "monolog/monolog": "^3.7",
        "vlucas/phpdotenv": "^5.6"
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/WordPress/wordpress-develop/"
        }
    ]
}
